<% @services.each do |service| %>

    <div class="container">
        <div class="card">

            <div class="image">
                <%= image_tag(service.image_data, alt: "photo") %>
            </div>

            <div class="text">
                <div class="fab">&#43;</div>
                <h3><%= service.title %></h3>
                <p><%= service.description %></p>
                <p><%= link_to 'Book', service %> |
                <%= link_to 'Show', service %></td> |
                <%= link_to 'Edit', edit_service_path(service) %> |
                 <%= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>

        </div>
    </div>

<% end %>