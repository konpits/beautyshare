<% @services.each do |service| %>

    <div class="container">
        
        <div class="card">

            <div class="image">
                <%= image_tag(service.image_data, alt: "photo") %>
            </div>

            <div class="text">
                <%= link_to(service) do %>
                  <div class="fab">&#43;</div>
                <% end %>
                <h3><%= service.title %></h3>
                 </br>
                <p><%= service.description %></p>
                </br>

            </div>

        </div>
   
    </div>

<% end %>