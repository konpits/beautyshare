<% @profiles.each do |profile| %>

    <div class="container">
        <div class="card">

            <div class="image">
                <% if profile.image.present? %>
                    <%= image_tag profile.image_url(:medium) %>
                <% else %>
                    no image
                <% end%>
            </div>

            <div class="text">
                
                <h3><%= "#{profile.first_name} #{profile.last_name}" %></h3>
                </br>
                <p><%= "Lives in: #{profile.city}, #{profile.state}." %></p>
                </br>
                <p><%= "Services offered by #{profile.first_name}:" %></p>
                </br>
                <p><% Service.where(user_id: profile.user_id).each do |service| %></p>
                    <strong><%= "#{service.title}" %></strong>
                    </br>
                    <%= link_to (service_path(:id => service.id)) do %>
                        <div class="fab">&#43;</div>
                    <% end %>
                    </br> </br>
                <% end %>
                <p>

            </div>

        </div>
    </div>

<% end %>
